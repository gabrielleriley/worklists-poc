{
  "$schema": "../node_modules/@angular-devkit/schematics/collection-schema.json",
  "schematics": {
    "loadable-entity": {
      "description": "Generates a NgRx entity store with the Loadable Entity interface",
      "factory": "./loadable-entity/index#loadableEntitySchematics",
      "schema": "./loadable-entity/schema.json"
    },
    "paginated-table": {
      "description": "Generates a filterable/sortable table",
      "factory": "./table/index#tableSchematics",
      "schema": "./table/schema.json"
    },
    "create-entity-store": {
      "description": "Generates a NgRx entity store with status tracking",
      "factory": "./ngrx/create-entity-store/index#createStoreSchematics",
      "schema": "./ngrx/create-entity-store/schema.json"
    },
    "create-action-workflow": {
      "description": "Adds an action workflow to an existing NgRx store",
      "factory": "./ngrx/create-action-workflow/index#createActionWorkflow",
      "schema": "./ngrx/create-action-workflow/schema.json"
    }
  }
}
